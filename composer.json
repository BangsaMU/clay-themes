{
    "name": "bangsamu/theme",
    "description": "Simple Laravel theme package",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bangsamu\\Theme\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bangsamu\\Theme\\ThemeServiceProvider"
            ],
            "aliases": {
                "Theme": "Bangsamu\\Theme\\Facades\\Theme"
            }
        }
    },
    "require": {
        "php": ">=8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0"
    }
}
